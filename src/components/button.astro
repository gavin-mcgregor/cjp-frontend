---
const { data } = Astro.props
---

<a class="cta-btn" href={data.url ? data.url : '#'} target={data.target ? data.target : '_self'}>
	{data.text ? data.text : 'Click Here'}
</a>

<style>
	.cta-btn {
		padding: 2rem 3rem;
		border-radius: 1rem;
		font-size: 2rem;
		letter-spacing: 0.025em;
		margin-top: 1rem;
		transition: background-color 0.3s ease-in;
	}

	:global(.background-peach-800) .cta-btn {
		color: var(--cream-400);
		background-color: var(--peach-600);
	}

	:global(.background-peach-800) .cta-btn:hover {
		background-color: var(--blue-800);
	}

	:global(.background-blue-600) .cta-btn {
		color: var(--cream-400);
		background-color: var(--blue-400);
	}

	:global(.background-blue-600) .cta-btn:hover {
		background-color: var(--blue-800);
	}

	@media (max-width: 980px) {
		.cta-btn {
			font-size: 1.5rem;
		}
	}
</style>
