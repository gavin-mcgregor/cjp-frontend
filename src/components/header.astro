---
import Logo from '../components/logo.astro'
---

<header>
	<div class="header-inner page-width">
		<div class="logo-container">
			<a href="/">
				<Logo />
			</a>
		</div>
		<button id="mobmenu" class="text-subtitle">Menu</button>
		<div class="nav-container">
			<nav>
				<ul class="menu-list">
					<li class="text-subtitle menu-item"><a href="/about/">About</a></li>
					<li class="text-subtitle menu-item"><a href="/weddings/">Weddings</a></li>
					<li class="text-subtitle menu-item">
						<span class="submenu-title">Info</span>
						<ul class="submenu-list">
							<li class="text-subtitle menu-item"><a href="/east-lothian/">East Lothian</a></li>
							<li class="text-subtitle menu-item"><a href="/blog/">Wedding Blog</a></li>
							<li class="text-subtitle menu-item"><a href="/packages/">Packages</a></li>
						</ul>
					</li>
					<li class="text-subtitle menu-item"><a href="/contact/">Contact</a></li>
				</ul>
			</nav>
		</div>
	</div>
</header>

<style>
	/* Header */

	.header-inner {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 2rem;
		padding: 0.5rem 0;
	}

	.logo-container {
		width: 400px;

		svg {
			fill: var(--peach-800);
		}
	}

	#mobmenu {
		border: unset;
		background-color: unset;
		color: var(--blue-800);
		display: none;
	}

	/* Nav */

	nav {
		ul {
			display: flex;
			gap: 2rem;
		}

		.submenu-list {
			display: none;
		}

		.menu-item {
			position: relative;

			> a,
			> span {
				transition: color 0.3s ease-in;
			}
		}

		.menu-item:hover {
			cursor: pointer;
			> a,
			> span {
				color: var(--peach-600);
			}

			.submenu-list {
				display: flex;
				flex-direction: column;
				gap: 0rem;
				position: absolute;
				background-color: var(--cream-200);
				padding: 2rem;
				left: -4rem;
				top: 2.5rem;
				min-width: 200px;
			}

			.submenu-list li::before {
				content: 'â€“';
				padding-right: 0.5rem;
			}
		}
	}

	@media (max-width: 980px) {
		.logo-container,
		#mobmenu {
			display: inline-block;
			position: relative;
			z-index: 10;
		}

		.nav-container.visible {
			display: block;
		}

		.nav-container {
			display: none;
			position: absolute;
			top: 0;
			left: -100vw;
			width: 100%;
			height: 200vh;
			background-color: var(--cream-200);

			transition-property: left;
			transition-duration: 0.75s;
			transition-timing-function: ease-in;
		}

		nav {
			display: flex;
			align-items: center;
			justify-content: center;
			height: 100vh;
			width: 100%;

			opacity: 0;
			transition-property: opacity;
			transition-duration: 0.4s;
			transition-delay: 0s;
			transition-timing-function: ease-in;

			.menu-list,
			.submenu-list {
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: 3rem;
			}

			.submenu-title {
				display: none;
			}

			.menu-item {
				font-size: 3rem;
			}
		}

		body.menu-open {
			height: 100vh;
			overflow: hidden;

			.nav-container {
				display: block;
				left: 0;
			}

			nav {
				opacity: 1;
				transition-delay: 0.7s;
				transition-duration: 0.5s;
			}
		}
		@starting-style {
			body.menu-open .nav-container {
				left: -100vw;

				nav {
					opacity: 0;
				}
			}
		}
	}
</style>

<script is:inline>
	function handleMenu() {
		const mobButton = document.querySelector('#mobmenu')
		mobButton.addEventListener('click', () => {
			const bodyEl = document.querySelector('body')
			const navEl = document.querySelector('.nav-container')

			if (!bodyEl.classList.contains('menu-open')) {
				bodyEl.classList.add('menu-open')
				navEl.classList.add('visible')
			} else {
				bodyEl.classList.remove('menu-open')
				setTimeout(() => {
					navEl.classList.remove('visible')
				}, 1000)
			}
		})
	}
	document.addEventListener('DOMContentLoaded', handleMenu)
</script>
