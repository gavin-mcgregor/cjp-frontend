---
import '../styles/main.scss'
import Header from '../components/header.astro'
const { title, description, page, classArray } = Astro.props

const outputSitename = 'Claire Juliet Paton'

let outputTitle = 'Claire Juliet Paton | Frontend Website Preview'
if (title) {
	outputTitle = title
}

let outputDescription = 'HTML / CSS / JS built with Astro.'
if (description) {
	outputDescription = description
}

let outputClasses = ''
if (page) {
	outputClasses += page
	outputClasses += ' '
}
if (classArray) {
	outputClasses += classArray.join(' ')
}
---

<html lang="en">
	<head>
		<!-- Meta -->
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<!-- Transitions -->
		<!-- <ViewTransitions /> -->

		<!-- SEO -->
		<title>{outputTitle}</title>
		<meta property="og:title" content={outputTitle} />
		<meta name="description" content={outputDescription} />
		<meta property="og:description" content={outputDescription} />
		<meta property="og:type" content="website" />
		<meta property="og:locale" content="en_GB" />
		<meta property="og:site_name" content={outputSitename} />
		<!-- <meta property="og:image" content="/images/hero.webp" /> -->

		<!-- Js -->
		<script is:inline src=""></script>

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&display=swap"
			rel="stylesheet"
		/>

		<!-- Astro -->
	</head>
	<body class={outputClasses}>
		<Header />
		<slot />
		<!-- ADD Footer -->
	</body>
</html>
